<%- include("partials/_header") -%>

<body>
	<div class="tm-page-wrap mx-auto">
		<div class="position-relative">
			<%- include("partials/_navigation") -%>

			<div class="tm-welcome-container tm-fixed-header tm-fixed-header-1">
				<div class="text-center">
					<p class="pt-5 px-3 tm-welcome-text tm-welcome-text-2 mb-1 text-white mx-auto" style="font-size: 2.5rem; font-weight: bold;">
						NeuStok Ürün Düzenleme Sayfası
					</p>
				</div>
			</div>

			<!-- Header image -->
			<div id="tm-fixed-header-bg" style="background-image: url('/path/to/your/background.jpg'); background-size: cover; background-position: center;"></div>
		</div>

		<!-- Page content -->
		<div class="container mt-4">
			<div class="row justify-content-center">
			  <div class="col-lg-8">
				<div class="card shadow-lg border-0 rounded-3">
				  <div class="card-header bg-dark text-white text-center">
					<h3 class="mb-0">Ürün Detayları</h3>
				  </div>
				  <div class="card-body p-5">
					<div class="text-center mb-4">
					  <img src="<%= product.image %>" alt="Ürün Görseli"
						   class="img-fluid shadow-sm rounded" 
						   style="max-width: 100%; border-radius: 15px;">
					</div>
					<h2 class="card-title text-center"><%= product.name %></h2>
					<p class="card-text card-desc text-center"><%= product.description %></p>
		  
					<% if (user && user.role !== "user") { %>
					  <div class="d-flex justify-content-center gap-3 mt-4">
						<a href="/products/edit/<%= product.slug %>" class="btn btn-outline-primary">
						  Ürünü Güncelle
						</a>
						<a href="/products/<%= product.slug %>?_method=DELETE"
						   class="btn btn-outline-danger"
						   onclick="return confirm('Bu ürünü silmek istediğinizden emin misiniz?')">
						  Ürünü Sil
						</a>
					  </div>
					<% } %>
				  </div>
				  <div class="card-footer text-center bg-light">
					<small class="text-muted">Ürün oluşturulma tarihi: <%= new Date(product.dateCreated).toLocaleDateString() %></small>
				  </div>
				</div>
			  </div>
			</div>
		  </div>

		<div class="container-fluid tm-content-container mx-auto pt-4">
			<%- include("partials/_footer") -%>
		</div>
	</div>
</body>
</html>
