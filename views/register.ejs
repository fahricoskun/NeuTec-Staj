<%- include("partials/_header") -%>
<body>
    <div class=" mx-auto">
        <div class="position-relative">
            <%- include("partials/_navigation") -%>

            <div class="tm-welcome-container tm-fixed-header tm-fixed-header-3">
                <div class="text-center">
                    <p class="pt-5 px-3 tm-welcome-text tm-welcome-text-2 mb-1 mt-lg-0 mt-5 text-white mx-auto">
                        NeuStok<br>Kullanıcı Kayıt
                    </p>                 
                </div>                
            </div>
            <div id="tm-fixed-header-bg"></div> <!-- Header image -->
        </div>

        <!-- Page content -->
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-lg-6 col-md-8 col-sm-10">
                    <div class="contact_form bg-light p-4 rounded shadow">
                        <h3 class="text-center mb-4">Kullanıcı Kayıt</h3>
                        <div id="message"></div>
                        <form method="post" action="/users/signup" novalidate>
                            <div class="mb-3">
                                <label for="name" class="form-label">Ad</label>
                                <input type="text" name="name" id="name" class="form-control" placeholder="Adınız" required>
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">E-posta</label>
                                <input type="email" name="email" id="email" class="form-control" placeholder="E-posta Adresiniz" required>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Şifre</label>
                                <input type="password" name="password" id="password" class="form-control" placeholder="Şifreniz" required>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-block">Kayıt Ol</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid tm-content-container mx-auto pt-4">
            <%- include("partials/_footer") -%>
        </div>

    <script src="js/parallax.min.js"></script>
</body>
</html>
